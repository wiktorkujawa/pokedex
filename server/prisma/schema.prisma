generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CatchedPokemons {
  userId      Int
  pokemonName String
  Pokemon     Pokemon @relation(fields: [pokemonName], references: [name])
  User        User    @relation(fields: [userId], references: [id])

  @@id([pokemonName, userId])
}

model Pokemon {
  name            String            @unique
  id              Int               @id @default(autoincrement())
  CatchedPokemons CatchedPokemons[]
  Wishlist        Wishlist[]
}

model User {
  id              Int                @id @default(autoincrement())
  userName        String?            @unique
  email           String?            @unique
  password        String
  CatchedPokemons CatchedPokemons[]
  Wishlist        Wishlist[]
}

model Wishlist {
  userId      Int
  pokemonName String
  Pokemon     Pokemon @relation(fields: [pokemonName], references: [name])
  User        User    @relation(fields: [userId], references: [id])

  @@id([pokemonName, userId])
}
